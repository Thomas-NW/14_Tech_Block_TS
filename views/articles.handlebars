<link rel="stylesheet" href="/styles.css">
<div class="card">
  <div class="card-body ms-3">
    <h5 class="card-title bg-primary text-light p-3">Update Article</h5>
    <form class='form update-form'>
      <div class="mb-3">
        <label for="update-title" class="form-label">{{article.title}}</label>
        {{#if showEdit}}
        <input type="text" class="form-control" id="update-title" aria-describedby="userNameHelp"
          value='{{article.title}}'>
        {{/if}}
      </div>
      <div class="mb-3">
        <label for="update-content" class="form-label">{{article.content}}</label>
        {{#if showEdit}}

        <textarea class="form-control" id="update-content">{{article.content}}
        </textarea>
        <button type="submit" class="btn btn-primary mt-2">Update Article</button>
        <button type="submit" class="btn btn-danger mt-2 deleteBtn">Delete Article</button>
        {{/if}}
    </form>


{{#unless showEdit}}
<textarea id="comment-text" ></textarea>
<button id='save-comment' name={{article.id}}>Save Comment</button>


{{/unless}}



  </div>
</div>

<script src='/scripts/update.js'></script>
<script src='/scripts/delete.js'></script>